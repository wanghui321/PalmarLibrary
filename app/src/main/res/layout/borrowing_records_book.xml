<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_showArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_borrow_bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JAVA"
            android:textColor="#162834"
            android:textSize="25dp" />

        <ImageView
            android:layout_marginRight="30dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/caretdown"
            android:id="@+id/iv_img"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_hideArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:id="@+id/tiaoxingma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tiaoxingma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="条形码："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_tiaoxingma_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20160210"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马克吐温"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/borrow_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_borrow_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="借书时间："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_borrow_time_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20180502"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/return_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_return_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="归还时间："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_return_time_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="20180503"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/borrowagin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_borrowagin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="续借次数："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_borrowagin_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="0"
                android:textSize="20dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <Button
                android:id="@+id/bt_borrowagin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:text="续  借"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>