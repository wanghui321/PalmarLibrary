<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3f40b5">
        <ImageView
            android:id="@+id/user_setting_back"
            android:src="@drawable/back"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="5"
            android:text="个人设置"
            android:textColor="#ffffff"
            android:textSize="25dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:radius="62dp"
            android:id="@+id/user_setting_user_head"
            android:src="@drawable/userhead"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="70dp"/>
        <EditText
            android:id="@+id/user_setting_username"
            android:layout_width="210dp"
            android:layout_marginTop="70dp"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginLeft="1dp"
            android:hint="未设置"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <!--
        <TextView
            android:id="@+id/"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:layout_width="210dp"
            android:layout_height="29dp"
            android:textColor="#3f40b5"
            android:textSize="23dp" />
            -->
        <ImageView
            android:layout_marginTop="80dp"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:id="@+id/user_setting_exchange_login"
            android:src="@drawable/exchange"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">
            <TableRow
                android:layout_margin="1dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:text="借书卡号"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/user_setting_card_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_marginLeft="1dp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_margin="1dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:text="真实姓名"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:background="#ffffff"/>
                <EditText
                    android:id="@+id/user_setting_user_realname"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_marginLeft="1dp"
                    android:hint="未设置"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_margin="1dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:text="院系名称"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:background="#ffffff"/>
                <EditText
                    android:id="@+id/user_setting_department_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_marginLeft="1dp"
                    android:hint="未设置"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_margin="1dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:text="邮箱"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:background="#ffffff"/>
                <EditText
                    android:id="@+id/user_setting_user_mail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_marginLeft="1dp"
                    android:hint="未设置"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </TableRow>
        </TableLayout>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/user_setting_btn"
            android:layout_gravity="center"
            android:background="#3f40b5"
            android:text="修    改"
            android:textColor="#ffffff"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
